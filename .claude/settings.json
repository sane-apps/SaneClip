{
  "permissions": {
    "allow": [
      "Bash(./scripts/*.sh:*)",
      "Bash(./scripts/*.swift:*)",
      "Bash(git:*)",
      "Bash(xcodegen:*)",
      "Bash(xcodebuild:*)",
      "Bash(xcrun:*)",
      "Bash(swift:*)",
      "Bash(swiftlint:*)",
      "Bash(open:*)",
      "Bash(brew:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(wc:*)",
      "Bash(which:*)",
      "Bash(killall:*)",
      "Bash(pgrep:*)",
      "Bash(pkill:*)",
      "mcp__memory__*",
      "mcp__apple-docs__*",
      "mcp__context7__*",
      "mcp__github__*",
      "mcp__XcodeBuildMCP__*",
      "mcp__macos-automator__*"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "[ -f ~/.claude/hooks/session_start.sh ] && ~/.claude/hooks/session_start.sh || true",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "[ -f ~/.claude/hooks/session_stop.sh ] && ~/.claude/hooks/session_stop.sh || true",
            "timeout": 5
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "swift-lsp@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "security-guidance@claude-plugins-official": true,
    "claude-mem@thedotmack": true
  }
}
