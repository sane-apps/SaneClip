# SaneProcess compliance manifest
name: SaneClip
type: macos_app
scheme: SaneClip
project: SaneClip.xcodeproj
bundle_id: com.saneclip.app

build:
  xcodegen: true

release:
  team_id: M78L6FXD48
  signing_identity: "Developer ID Application"
  dist_host: dist.saneclip.com
  site_host: saneclip.com
  r2_bucket: sanebar-downloads
  use_sparkle: true
  min_system_version: "15.0"
  dmg:
    volume_icon: Resources/DMGIcon.icns
    file_icon: Resources/DMGIcon.icns
    window_size: "600 428"
    app_icon_pos: "150 190"
    drop_pos: "450 190"
    no_internet_enable: true
  export:
    profiles:
      - "com.saneclip.app:SaneClip Developer ID"
      - "com.saneclip.app.widgets:SaneClip Widgets Developer ID"

commands:
  verify: ./scripts/SaneMaster.rb verify
  test_mode: ./scripts/SaneMaster.rb tm
  lint: ./scripts/SaneMaster.rb lint
  clean: ./scripts/SaneMaster.rb clean
  launch: ./scripts/SaneMaster.rb launch
  logs: ./scripts/SaneMaster.rb logs

docs:
  - CLAUDE.md
  - README.md
  - DEVELOPMENT.md
  - ARCHITECTURE.md
  - SESSION_HANDOFF.md

mcps:
  - apple-docs
  - context7
  - github
  - xcode

appstore:
  enabled: true
  app_id: "6758898132"
  configuration: Release-AppStore
  platforms: [macos, ios]
  ios_scheme: SaneClipIOS
  category: public.app-category.productivity
  age_rating: "4+"
  privacy_policy_url: "https://saneclip.com/privacy"
  support_url: "https://saneclip.com/support"
  review_notes: "SaneClip uses Accessibility permission to paste clipboard items directly into the frontmost application. Without this permission, the app still functions as a clipboard viewer/copier but cannot perform paste actions. To test: grant Accessibility in System Settings > Privacy & Security > Accessibility, then use the global hotkey (Cmd+Shift+V) to open history and click any item to paste it."
  screenshots:
    macos: docs/images/screenshot-[!i]*.png
    ios: docs/images/screenshot-ios-*.png
  contact:
    name: "Stephan Joseph"
    phone: "+17277589785"
    email: "hi@saneapps.com"

website: true
website_domain: saneclip.com
